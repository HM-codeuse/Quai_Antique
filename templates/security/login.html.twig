{% include 'base_site/head.html.twig' %}

{% block body %}

	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connectés en tant que
				{{ app.user.username}}
				{{ app.user.firstname }},
				<button>
					<a href="{{ path('app_logout') }}">Me déconnecter
					</a>
				</button>
			</div>
		{% endif %}

		<div class="login_form m-4">
			<h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
			<label for="inputUsername">Email</label>
			<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control my-3" autocomplete="username" required autofocus>
			<label for="inputPassword">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control my-3" autocomplete="current-password" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
								        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
								        See https://symfony.com/doc/current/security/remember_me.html
								
								        <div class="checkbox mb-3">
								            <label>
								                <input type="checkbox" name="_remember_me"> Remember me
								            </label>
								        </div>
								    #}

			<button type="submit" class="btn-secondary rounded-2 p-2">Se connecter</button>
		</div>


	</form>
{% endblock %}
