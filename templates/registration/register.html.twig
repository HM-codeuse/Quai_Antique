{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
<h1 class="m-2 text-center">Inscription</h1>

{{ form_start(registrationForm) }}
<div class="custom-form-container mx-4">
	{{ form_row(registrationForm.username) }}
	{{ form_row(registrationForm.firstname) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
	{{ form_row(registrationForm.agreeTerms, {
            label: 'Acceptez-vous les conditions générales d\'utilisation? '
        }) }}

<div class="registration-button text-center">
	<button type="submit" class="btn-secondary col-6 rounded-2 p-2">Enregistrer</button></div>
</div>

{{ form_end(registrationForm) }}
{% endblock %}
